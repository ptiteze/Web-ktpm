@{
	ViewData["Title"] = "Home Page";
}
@section Header {
	@Html.Partial("Header")
}
@section Footer {
	@Html.Partial("Footer")
}
@model Kitchen_MVC.ViewModels.Home.HomeViewModels


<!-- Sidebar ================================================== -->
<div id="mainBody">
	<div class="container">
		<div class="row">
			<div id="sidebar" class="span3">
				<div class="well well-small"><a id="myCart" href="product_summary.html"><img src="themes/images/ico-cart.png" alt="cart">3 Items in your cart  <span class="badge badge-warning pull-right">$155.00</span></a></div>
				<ul id="sideManu" class="nav nav-tabs nav-stacked">
					@foreach (var categories in @Model.Categories)
					{
						<li>
							<a href="~/"> @categories.Name </a>
						</li>
					}
				</ul>
				<br />
				<div class="thumbnail">
					<img src="~/themes/images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
					<div class="caption">
						<h5>Payment Methods</h5>
					</div>
				</div>
			</div>
			<div class="span9">
				<div class="well well-small">
					<h4>Featured Products <small class="pull-right">@Model.Products.Count featured products</small></h4>
					<div class="row-fluid">
						<div id="featured" class="carousel slide">
							<div class="carousel-inner">
								<div class="item active">
									<ul class="thumbnails">
										@{
											int size = @Model.Products.Count / 4;
										}
										@for (int j = 0; j <= size; j++)
										{
											@for (int i = j * 4; i < @Model.Products.Count || i < size * 4; i++)
											{
												<li class="span3">
													<div class="thumbnail">
														<i class="tag"></i>
														<a href="product_details.html"><img src=@Model.Images[i].Url alt=""></a>
														<div class="caption">
															@{
																string truncatedName = Model.Products[i].Name.Length > 22
																? Model.Products[i].Name.Substring(0, 22) + "..."
																: Model.Products[i].Name;
															}
															<h5>@truncatedName</h5>
															<h4><a class="btn" href="product_details.html">VIEW</a> <span class="pull-right">$@Model.Products[i].Price.ToString("F0")</span></h4>
														</div>
													</div>
												</li>
											}
										}
									</ul>
								</div>
							</div>
							<a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
							<a class="right carousel-control" href="#featured" data-slide="next">›</a>
						</div>
					</div>
				</div>
				<h4>Latest Products </h4>
				<ul class="thumbnails">
					@for (int i = 0; i < Model.Products.Count; i++)
					{
						<li class="span3">
							<div class="thumbnail">
								<a href="product_details.html"><img src=@Model.Images[i].Url alt="" /></a>
								<div class="caption">
									@{
										string truncatedName = Model.Products[i].Name.Length > 22
										? Model.Products[i].Name.Substring(0, 22) + "..."
										: Model.Products[i].Name;
										string truncatedDes = Model.Products[i].Description.Length > 30
										? Model.Products[i].Description.Substring(0, 30) + "..."
										: Model.Products[i].Description;
									}
									<h5>@truncatedName</h5>
									<p>
										@truncatedDes
									</p>

									<h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">$@Model.Products[i].Price.ToString("F0")</a></h4>
								</div>
							</div>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- Sidebar end=============================================== -->
